                  <name key="Νεμεσάμμων Nemesammon">Νεμεσάμμω<supplied reason="lost">ν</supplied>
                  </name>
               </persName>
               <gap reason="omitted" quantity="3" cert="low" unit="character"/>. 
           <lb n="2"/>
               <g type="Ἔτους"/>
               <num value="20" xml:lang="grc">
                  <unclear>κ</unclear>ʹ</num>, Ἁθὺρ <num value="11" xml:lang="grc">
