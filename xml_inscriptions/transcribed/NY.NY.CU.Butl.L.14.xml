                  <name type="praenomen" key="Marcus"><expan><abbr>M</abbr><ex>arcus</ex></expan></name>
                  <name type="geniticulum" key="Valerius">Val<unclear>e</unclear><supplied reason="lost">rius</supplied></name>
               </persName>  
            <lb n="3"/>
